{
  "devDependencies": {
    "@tailwindcss/forms": "^0.3.3",
    "@tailwindcss/typography": "^0.4.1",
    "esbuild": "^0.12.28",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^2.2.15"
  },
  "dependencies": {
    "@alpinejs/intersect": "^3.3.3",
    "alpinejs": "^3.3.3"
  },
  "scripts": {
    "build": "run-s build:*",
    "watch": "run-p watch:*",
    "build:css": "tailwindcss -i ./build/tailwind.pre.css -o ./src/style.css --jit -m --purge ./**/*.html -c ./tailwind.config.js",
    "build:js": "esbuild ./build/build.js --outfile=./src/main.min.js --platform=browser --target=es2017 --bundle --minify",
    "watch:css": "tailwindcss -i ./build/tailwind.pre.css -o ./src/style.css --jit -w --purge ./**/*.html -c ./tailwind.config.js",
    "watch:js": "esbuild ./build/build.js --outfile=./src/main.min.js --platform=browser --target=es2017 --bundle --watch"
  }
}
