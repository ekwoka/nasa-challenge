{
  "devDependencies": {
    "esbuild": "^0.12.26",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^2.2.15"
  },
  "dependencies": {
    "alpinejs": "^3.3.3"
  },
  "scripts": {
    "build": "run-s build:*",
    "watch": "run-p watch:*",
    "build:css": "tailwindcss -i ./build/tailwind.pre.css -o ./src/style.css --jit -m --purge ./**/*.html",
    "build:js": "esbuild ./build/build.js --outfile=./src/main.min.js --platform=browser --target=es2017 --bundle --minify",
    "watch:css": "tailwindcss -i ./build/tailwind.pre.css -o ./src/style.css --jit -w --purge ./**/*.html",
    "watch:js": "esbuild ./build/build.js --outfile=./src/main.min.js --platform=browser --target=es2017 --bundle --watch"
  }
}
